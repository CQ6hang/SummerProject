<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <View
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:background="@drawable/orange_background" />

    <include layout="@layout/activity_topbar2" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_info_head"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="164dp"
        android:src="@drawable/welcome1"
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp" />


    <TextView
        android:id="@+id/activity_info_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_info_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="我的名字四个字"
        android:textColor="#1e1e1e"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/activity_info_lo_iSell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_info_userName"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/activity_info_iv_iSell"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sell" />

        <TextView
            android:id="@+id/activity_info_tv_iSell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="0dp"
            android:text="我发布的"
            android:textColor="#1e1e1e"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/activity_info_lo_iSell"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@color/smssdk_gray" />

    <LinearLayout
        android:id="@+id/activity_info_lo_iCollect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view4"
        android:layout_marginTop="10dp"

        android:orientation="horizontal">


        <ImageView
            android:id="@+id/activity_info_iv_iCollect"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/collect" />

        <TextView
            android:id="@+id/activity_info_tv_iCollect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text="我收藏的"
            android:textColor="#1e1e1e"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/activity_info_lo_iCollect"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@color/smssdk_gray" />

    <LinearLayout
        android:id="@+id/activity_info_lo_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view5"
        android:layout_marginTop="10dp"

        android:orientation="horizontal">


        <ImageView
            android:id="@+id/activity_info_iv_comment"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/comment" />

        <TextView
            android:id="@+id/activity_info_tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text="我的留言"
            android:textColor="#1e1e1e"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>