<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topBar3"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="#fd6a07"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <View
        android:id="@+id/topbar3_statuBar"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/topbar3_statuBar">

        <ImageButton
            android:id="@+id/activity_topbar3_ib_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_nor" />

        <TextView
            android:id="@+id/activity_topbar3_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="XXXX"
            android:textColor="#fff"
            android:textSize="25sp" />
    </RelativeLayout>


</RelativeLayout>