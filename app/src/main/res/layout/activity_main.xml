<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_main_vp_threePage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/smssdk_gray" />

    <RadioGroup
        android:id="@+id/activity_main_rg_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/activity_main_rb_sell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/sell_selector"
            android:gravity="center"
            android:text="发布物品"
            android:textColor="#1e1e1e"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/activity_main_rb_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/main_selector"
            android:gravity="center"
            android:text="主页"
            android:textColor="#1e1e1e"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/activity_main_rb_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/account_selector"
            android:gravity="center"
            android:text="个人中心"
            android:textColor="#1e1e1e"
            android:textSize="10sp" />

    </RadioGroup>

</LinearLayout>
